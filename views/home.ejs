<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Drive | Home</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <link rel="shortcut icon" href="../cloud_logo.ico" type="image/x-icon">
</head>
<body class="bg-black min-h-screen flex flex-col">

  <!-- saperate navbar -->
  <%- include("navbar", { user: user }) %>


  <!-- Main Content -->
  <main class="flex-1 p-6">
    <!-- <h1>Welcome <%= user.username %></h1> -->

    
    <!-- Upload Modal -->
    <div id="uploadModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-300">
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg w-full max-w-md p-6 relative transform scale-95 transition-transform duration-300">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">Upload File</h2>
        <form action="/upload" method="post" enctype="multipart/form-data" class="space-y-4">
          <input type="file" name="file" required class="w-full text-gray-700 dark:text-white" />
          <div class="flex justify-end gap-2">
            <button type="button" onclick="hidePopUp()" class="bg-gray-400 hover:bg-gray-500 text-white py-2 px-4 rounded transition duration-200">Cancel</button>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded transition duration-200">Upload</button>
          </div>
        </form>
        <button onclick="hidePopUp()" class="absolute top-2 right-2 text-gray-500 dark:text-gray-300 text-2xl hover:text-gray-700 dark:hover:text-white">
          <i class="ri-close-line"></i>
        </button>
      </div>
    </div>

    <!-- File List -->
    <% if (files.length === 0) { %>
      <div class="flex flex-col items-center justify-center h-64 opacity-70">
        <i class="ri-folder-2-line text-6xl mb-3 text-gray-400"></i>
        <p class="text-gray-400 text-lg">No files uploaded yet</p>
      </div>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 mt-4 animate-fadeIn">
        <% files.forEach(file => { %>
          <div
            class="bg-gray-800/60 hover:bg-gray-800 border border-gray-700 rounded-2xl p-4 shadow-md hover:shadow-blue-500/20 transition-all duration-300 group">
            <div class="flex justify-between items-center mb-2">
              <i
                class="ri-file-line text-2xl text-blue-400 group-hover:scale-110 transition-transform duration-300"></i>
              <a href="/download/<%= file.path %>" target="_blank"
                class="text-gray-400 hover:text-blue-400 transition duration-200">
                <i class="ri-download-line text-xl"></i>
              </a>
            </div>
            <p class="truncate text-gray-300 text-sm font-medium"><%= file.originalname %></p>
            <p class="text-gray-500 text-xs mt-1">Uploaded just now</p>
          </div>
        <% }) %>
      </div>
    <% } %>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  <script>
    const modal = document.getElementById('uploadModal');

    function showPopUp() {
      modal.classList.remove('opacity-0', 'pointer-events-none');
      modal.classList.add('opacity-100');
      modal.querySelector('div').classList.remove('scale-95');
      modal.querySelector('div').classList.add('scale-100');
    }

    function hidePopUp() {
      modal.classList.add('opacity-0', 'pointer-events-none');
      modal.classList.remove('opacity-100');
      modal.querySelector('div').classList.add('scale-95');
      modal.querySelector('div').classList.remove('scale-100');
    }
  </script>
</body>
</html>
